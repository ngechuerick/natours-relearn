//Header
header.header 
    nav.nav.nav--tours 
        a.nav__el(href='/') All tours
    .header__logo 
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user
            button.nav__el.nav__el--logout Log out
            a.nav__el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else
            a.nav__el(href='/login') Log in 
            a.nav__el.nav__el--cta(href='/signup') Sign up 
    .hamburger  
        span.line 
        span.line 
        span.line 
    .menubar
        .header__logo 
            img(src='/img/logo-white.png' alt='Natours logo')
        a.nav__el(href='/') All tours
        nav.nav-mobile--user
        if user
            a.nav__mobile--el(href='/me')
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                span= user.name.split(' ')[0]
            button.nav__el.nav__el--logout--mobile Log out
        else
            a.nav__mobile--el(href='/login') Log in 
            a.nav__mobile--el.nav__el--cta--mobile(href='/signup') Sign up 